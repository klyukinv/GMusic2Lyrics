<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:background="@drawable/list_background"
    app:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp">

        <ImageView
            android:id="@+id/image_hot"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/number_hot"
            android:padding="2dp" />

        <TextView
            android:id="@+id/title_hot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/image_hot"
            android:layout_marginStart="8dp"
            android:text="Line 1"
            android:textAppearance="@android:style/TextAppearance.Material.Display1"
            android:textColor="@color/primary_dark"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/artist_hot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title_hot"
            android:layout_toEndOf="@+id/image_hot"
            android:layout_marginStart="8dp"
            android:text="Line 2"
            android:textAppearance="@android:style/TextAppearance.Material.Display1"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/views_hot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="12dp"
            android:text="1.1M"
            android:textColor="@color/primary_dark" />

        <TextView
            android:id="@+id/number_hot"
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="10"
            android:textAlignment="center" />

    </RelativeLayout>

</android.support.v7.widget.CardView>